if(isset($_GET['listadoRelatores'])) {
    $query = "SELECT rel.ID, rel.idArea, rel.nombre, ar.nombreArea from relator rel INNER JOIN area ar WHERE isActive = true AND rel.idArea = ar.ID ";
    $result = mysqli_query($conection, $query);
    if (!$result) {
        die('Query Failed' . mysqli_error($conection));
    }

    $json = array();
    while ($row = mysqli_fetch_array($result)) {
        $json[] = array(
			'nombre' => $row['nombre'],
			'nombreArea' => $row['nombreArea'],
			'ID' => $row['ID']
        );
    }
    $jsonstring = json_encode($json);
    echo $jsonstring;
} else {
    echo json_encode("error");
}
